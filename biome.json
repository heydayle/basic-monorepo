{
  "$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
  "files": {
    "includes": [
      "frontend/**/*.ts",
      "frontend/**/*.tsx",
      "shared/**/*.ts",
      "!**/.pnpm-store",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/.vscode",
      "!**/.react-router"
    ],
    "ignoreUnknown": false
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noDocumentCookie": "off"
      },
      "style": {
        "noNonNullAssertion": "error",
        "useImportType": "error"
      },
      "a11y": "off"
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "formatWithErrors": false
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "asNeeded"
    }
  }
}
